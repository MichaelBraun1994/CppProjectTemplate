{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build RST documentation.",
      "command": "${workspaceFolder}\\docs\\make.bat",
      "args": ["html"]
    },
    {
      "label": "Clean RST documentation.",
      "command": "${workspaceFolder}\\docs\\make.bat",
      "args": ["clean"]
    },
    {
      "label": "Show RST documentation.",
      "command": "explorer",
      "args": ["${workspaceFolder}\\build\\html\\index.html"],
      "dependsOn": ["Build RST documentation."]
    }
  ]
}