{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Docs: Build RST documentation",
      "windows": {
        "command": "make.bat"
      },
      "linux": {
        "command": "make"
      },
      "args": [
        "html"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      }
    },
    {
      "label": "Docs: Clean RST documentation",
      "windows": {
        "command": "make.bat"
      },
      "linux": {
        "command": "make"
      },
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}/docs"
      }
    },
    {
      "label": "Clean build",
      "type": "shell",
      "windows": {
        "command": "Remove-Item -Force -Recurse ${workspaceFolder}\\build\\*"
      },
      "linux": {
        "command": "rm -rf ${workspaceFolder}\\build\\*"
      }
    }
  ]
}